<div class="form-wide container-fluid">
	<%= simple_form_for [@user, goal] do |f| %>
		<%= f.input :title %>

			<%= f.label :description, "Description" %><br>
			<%= text_area_tag :description, nil, class: 'form-control', rows: 4 %><br />

			<%= f.label :date, "Date" %>
			<%= date_field_tag :date, Date.today, class: 'form-control' %><br>
		<%= f.submit %>
	<% end %>
</div>